
.row
 .small-7.column
  %h3 Assignments List
 
  -@assignments.each do |assignment|
    
   %h5=assignment.course_name
   
   =link_to assignment.course_code,assignment
   %br
  -user_signed_in? 
  =link_to "New Assignment",new_assignment_path,class:'button success radius small'



 .small-5.column
  %h3 Course List
  -Course.all.each do |course|
   = link_to course.name, assignments_path(course: course.name), class: 'button success radius tiny'
   |   
  

